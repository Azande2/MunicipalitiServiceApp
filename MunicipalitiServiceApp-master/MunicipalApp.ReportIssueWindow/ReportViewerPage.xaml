<Page x:Class="ProgPart17312.ReportViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Report Viewer" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📋 Submitted Reports"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20" />

        <ListBox x:Name="lstReports"
                 Grid.Row="1"
                 FontSize="14"
                 Background="#f5f5f5"
                 BorderThickness="1"
                 BorderBrush="#ccc"
                 Padding="10"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Page>
