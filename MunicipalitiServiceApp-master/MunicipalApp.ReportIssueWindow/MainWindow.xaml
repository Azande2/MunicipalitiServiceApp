<Window x:Class="ProgPart17312.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Report Issue" Height="700" Width="900" Background="#F2F6FC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#2C3E50" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Municipal Services - Report an Issue" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Floating Help Button -->
        <Button x:Name="btnHelpFloat" Content="❓ Need Help?" Width="130" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,70,20,0" Background="#2980B9" Foreground="White" FontWeight="Bold" Click="btnHelpFloat_Click"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Report Form -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="📍 Location:" FontWeight="SemiBold"/>
                <TextBox Name="txtLocation" Margin="0,5,0,10" Padding="5" Background="WhiteSmoke"/>

                <TextBlock Text="📂 Category:" FontWeight="SemiBold"/>
                <ComboBox Name="cbCategory" Margin="0,5,0,10" Padding="5">
                    <ComboBoxItem Content="Sanitation"/>
                    <ComboBoxItem Content="Roads"/>
                    <ComboBoxItem Content="Utilities"/>
                    <ComboBoxItem Content="Electricity"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <TextBlock Text="📝 Description:" FontWeight="SemiBold"/>
                <RichTextBox Name="rtbDescription" Height="100" Margin="0,5,0,10" Background="WhiteSmoke"/>

                <TextBlock Text="📆 Date of Occurrence:" FontWeight="SemiBold"/>
                <DatePicker Name="datePicker" Margin="0,5,0,10"/>

                <Button Content="📎 Attach Image or Document" Click="AttachFile_Click" Margin="0,5,0,10" Padding="8" Background="#3498DB" Foreground="White"/>
                <TextBlock Name="lblFileName" FontStyle="Italic" Foreground="Gray"/>

                <ProgressBar Name="reportProgress" Height="15" Minimum="0" Maximum="100" Visibility="Collapsed" Margin="0,10"/>
                <Label Name="lblStatus" FontWeight="Bold" Foreground="Green"/>
            </StackPanel>

            <!-- Chatbot Panel -->
            <Border x:Name="ChatbotPanel" Grid.Column="1" Background="#ECF0F1" Padding="10" CornerRadius="10" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="🤖 Chatbot Assistant" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <ScrollViewer Height="300" Background="White" Margin="0,0,0,10">
                        <StackPanel Name="ChatHistory" Margin="5">
                            <!-- Chat content -->
                        </StackPanel>
                    </ScrollViewer>
                    <DockPanel>
                        <TextBox Name="txtChatInput" Width="200" Margin="0,0,10,0" Padding="5"/>
                        <Button Content="Send" Click="ChatbotSend_Click" Background="#2ECC71" Foreground="White" Padding="5,2"/>
                    </DockPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
            <Button Content="✅ Submit" Width="120" Margin="10" Click="Submit_Click" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            <Button Content="🔙 Back to Menu" Width="120" Margin="10" Click="BackToMenu_Click" Background="#95A5A6" Foreground="White"/>
            <Button Content="📖 View Reports"
        Width="120"
        Height="35"
        Margin="10"
        Click="ViewReports_Click"/>

        </StackPanel>
    </Grid>
</Window>
