<Page x:Class="ProgPart17312.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HomePage">

    <Grid>

        <!-- Main Menu Buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="🏛️ Welcome to Municipal Services"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="📋 Report an Issue" Width="200" Height="40"
                    Click="ReportIssue_Click"
                    Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
            <Button Content="ℹ️ Learn More" Width="200" Height="40"
                    Click="LearnMore_Click"
                    Background="#3498DB" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <!-- Floating Chatbot Button -->
        <Button x:Name="btnChatbot"
                Content="💬"
                Width="60" Height="60"
                FontSize="24"
                Background="#E67E22"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click="ToggleChatbotPanel"/>

        <Border x:Name="ChatPanel"
        Background="#FAFAFA"
        BorderBrush="#DADADA"
        BorderThickness="1"
        CornerRadius="10"
        Width="420"
        Height="520"
        VerticalAlignment="Bottom"
        HorizontalAlignment="Right"
        Margin="0,0,80,80"
        Visibility="Collapsed"
        Padding="0"
        SnapsToDevicePixels="True">
            <Grid>
                <!-- Header -->
                <Border Background="#34495E"
                Height="50"
                CornerRadius="10,10,0,0"
                Padding="10">
                    <TextBlock Text="🤖 Municipal Chat Assistant"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
                </Border>

                <!-- Chat History -->
                <ScrollViewer Margin="10,60,10,80"
                      VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChatHistory"
                        Orientation="Vertical"
                        VerticalAlignment="Top"/>
                </ScrollViewer>

                <!-- Input Section -->
                <Border Background="#F0F0F0"
                Height="70"
                VerticalAlignment="Bottom"
                Padding="10"
                CornerRadius="0,0,10,10">
                    <DockPanel>
                        <!-- Wrap TextBox inside Border for rounded corners -->
                        <Border Background="White"
                        CornerRadius="5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Height="45"
                        Width="320"
                        Margin="0,0,10,0">
                            <TextBox x:Name="txtChatInput"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             BorderThickness="0"
                             Background="Transparent"
                             Padding="8"
                             KeyDown="txtChatInput_KeyDown"/>
                        </Border>

                        <!-- Send Button -->
                        <Button Content="Send"
                        Width="60"
                        Height="45"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ChatbotSend_Click"
                        VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>


    </Grid>
</Page>
