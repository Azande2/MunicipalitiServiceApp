<Page x:Class="ProgPart17312.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HomePage">

    <Grid Background="WhiteSmoke">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="🏛️ Welcome to Municipal Services"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

           
            <Button Content="📋 Report an Issue" Width="200" Height="40"
                    Click="ReportIssue_Click"
                    Background="#27AE60" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

            
            <Button Content="ℹ️ Learn More" Width="200" Height="40"
                    Click="LearnMore_Click"
                    Background="#3498DB" Foreground="White"
                    FontWeight="Bold" Margin="0,0,0,10"/>

           
            <Button Content="📅 Local Events and Announcements (coming soon)"
                    Width="360" Height="35"
                    Click="LocalEvents_Click"
                    Background="#E0E0E0" Foreground="Gray"
                    BorderBrush="#B0B0B0" FontWeight="SemiBold" Margin="0,0,0,5"/>

            
            <Button Content="🛠️ Service Request Status (coming soon)"
                    Width="330" Height="35"
                    Click="ServiceStatus_Click"
                    Background="#E0E0E0" Foreground="Gray"
                    BorderBrush="#B0B0B0" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Chatbot Button -->
        <Button x:Name="btnChatbot"
                Content="💬"
                Width="60" Height="60"
                FontSize="24"
                Background="#E67E22"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                Click="ToggleChatbotPanel"/>

        <!-- Chat Panel -->
        <Border x:Name="ChatPanel"
                Background="#FAFAFA"
                BorderBrush="#DADADA"
                BorderThickness="1"
                CornerRadius="10"
                Width="420"
                Height="520"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,80,80"
                Visibility="Collapsed"
                Padding="0"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#34495E" CornerRadius="10,10,0,0" Padding="10">
                    <TextBlock Text="🤖 Municipal Chat Assistant"
                               Foreground="White" FontSize="16"
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                </Border>

                <!-- Chat History -->
                <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ChatHistory" Orientation="Vertical" VerticalAlignment="Top"/>
                </ScrollViewer>

                <!-- Input Section -->
                <Border Grid.Row="2" Background="#F0F0F0" Padding="10" CornerRadius="0,0,10,10">
                    <DockPanel>
                        <Border Background="White" CornerRadius="5" BorderBrush="#CCCCCC"
                                BorderThickness="1" Height="45" Width="320" Margin="0,0,10,0">
                            <TextBox x:Name="txtChatInput"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontSize="14"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="8"
                                     KeyDown="txtChatInput_KeyDown"/>
                        </Border>
                        <Button Content="Send"
                                Width="60" Height="45"
                                Background="#27AE60"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ChatbotSend_Click"
                                VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
